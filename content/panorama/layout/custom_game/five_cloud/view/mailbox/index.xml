	</scripts>
	<styles>
		<include src="file://{resources}/layout/custom_game/five_cloud/view/mailbox/index.css" />
	</styles>
	<snippets>
		<snippet name="mail">
			<Panel class="fc-mailbox-mail">
				<Label class="fc-mailbox-mail-title" text="-"/>
				<Label class="fc-mailbox-mail-excerpt" text="-"/>
				<Label class="fc-mailbox-mail-read" text="-"/>
